<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMPart1.Views.AddEmployeePage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry TextColor="Black" Placeholder="Employee Name" Text="{Binding Name ,Mode=TwoWay}"/>
            <Entry TextColor="Black" Placeholder="Address" Text="{Binding Designation ,Mode=TwoWay}"/>
            <Button Text="Save" HorizontalOptions="FillAndExpand" Margin="0" Command="{Binding SaveEmployee}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>